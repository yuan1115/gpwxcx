<!--pages/user/user.wxml-->
<view class='content'>
    <view class="userinfo">
        <view class='userinfo-top'></view>
        <view class='click'>
            <button bindtap='setting'>
                <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" ></image>
            </button>
        </view>
        <view style="margin-top:10rpx">{{userInfo.nickName}}</view>
    </view>
    <view class='tips'>
        <text class='left'>找不到我参与过的文章？绑定手机号码试试吧！</text>
        <text class='right' bindtap='brandTelBnt'>绑定</text>
    </view>
    <view class='my'>
        <view class='line'>
            <text>我参与/发布的文章</text>
        </view>
        <view class='lines' bindtap='toArticle' data-id="1">
            <icon class='fa fa-book'></icon>
            <view>我的文章</view>  
        </view>
        <!-- <view class='lines' bindtap='toArticle' data-id="2">
            <icon class='fa fa-question'></icon>
            <view>我的问答</view> 
        </view> -->
        <view class='lines' bindtap='toArticle' data-id="3">
            <icon class='fa fa-comments'></icon>
            <view>我的评论</view> 
        </view>
        <view class='lines' bindtap='toArticle' data-id="4">
            <icon class='fa fa-comment'></icon>
            <view>回复我的</view>
        </view>
        <view class='lines' bindtap='toArticle' data-id="5">
            <icon class='fa fa-star'></icon>
            <view>文章收藏</view>  
        </view>
    </view>
    <view class='line' bindtap='toAbout'>
        关于我们
        <icon class='fa fa-angle-right'></icon>
    </view>
</view>
<view class='brandTel' hidden='{{brandTelBnt?false:true}}'> 
    <view class='form'>
        <form bindsubmit="formSubmit" bindreset="formReset">
            <view class='top'>
                <text>绑定手机号</text>
                <icon type='clear' bindtap='brandTelBnt'></icon>
            </view>
            <view class='tel'>
                <input placeholder="请输入手机号" auto-focus placeholder-style="font-size:28rpx"/>
            </view>
            <view class='code'>
                <view class='left'>
                    <input placeholder="请输入验证码" auto-focus placeholder-style="font-size:28rpx"/>
                </view>
                <view class='right'>获取验证码</view>
            </view>
            <button formType="submit">确定</button>
        </form>
    </view> 
</view>
