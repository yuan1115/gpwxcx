/* pages/user/user.wxss */
page{background: #f6f6f6}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 260rpx;
  padding-bottom: 30rpx;
  background: #fff;
  margin-bottom: 25rpx;
}
.userinfo-top{
    background: #669ef9;
    width: 100%;
    height:200rpx;
    border-bottom-right-radius: 100%;
    border-bottom-left-radius: 100%
}
.click{
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%; 
    padding: 0;
    background: #fff;
    border:2px #fff solid;
    margin-top: -80rpx
}
.userinfo button{
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%; 
    padding: 0;
    background: #fff;
    border:2px #fff solid; 
}
.userinfo button::after{ 
    width: 128rpx;
    height: 128rpx;
    border:0
 }
.click image{
    width: 100%;
    height: 100%;
    border-radius: 50%;
    vertical-align: middle;
}
.tips{
    font-size: 28rpx;
    padding: 20rpx;
    background: #fff;
    margin-bottom: 25rpx;
}
.tips .left{
    text-align: middle;
    color: #666;
    padding-top:5rpx;
    display: block;
    float: left
}
.tips .right{
    float: right;
    padding:5rpx 20rpx;
    border: 1px solid #669ef9;
    color: #669ef9;
}
.my{
    font-size: 28rpx;
    background: #fff;
    margin-bottom: 25rpx
}
.line{
    padding:25rpx 20rpx;
    border-bottom:1px #f6f6f6 solid; 
    background: #fff;
    font-size: 28rpx
}
.fa-angle-right{float: right}
.line text{
    margin-left:10rpx
}
.lines{
    width: 25%;
    float: left;
    text-align: center;
    padding:30rpx 0
}
.lines icon{
    font-size: 40rpx;
    color: #666999;
    margin-bottom: 20rpx;
}
.brandTel{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    z-index: 999;
    background: rgba(0, 0, 0, 0.2)
}
.form{
    width:70%;
    background: #fff;
    margin:40% auto;
    padding: 30rpx 40rpx;
    font-size: 28rpx;
    border-radius: 20rpx;
    position: relative
}
.form .top{
    padding-bottom: 20rpx;
    font-size: 32rpx
}
.form icon{
   float: right;
   position: absolute;
   top:15rpx;
   right:15rpx;
}
.form input{
    border: 1px solid #ddd;
    padding: 8rpx 20rpx;
    margin-bottom: 20rpx
}
.code .left{
    margin-right:20rpx;
    float: left;
    width: 60%
}
.code .right{
    border: 1px solid #669ef9;
    padding: 17rpx 20rpx;
    color: #669ef9;
    text-align: center
}
.form button{
    background: #666999;
    color: #fff;
    margin:20rpx 0;
}